
hgcmd()
{
    local dirs=`find . -maxdepth 1 -type d`
    for x in $dirs
    do
        if [ $x != '.' ]
        then
            if [ -d "$x/.hg" ]
            then
                echo $x && cd $x
                for cmd in `seq 1 $#`; do hg ${!cmd}; done
                cd ..
            fi
        fi
    done
}
hgchanges()
{
    hgcmd stat
}
alias hgch='hgchanges'

hgbranches()
{
    hgcmd branch
}
alias hgbr='hgbranches'

hgpullupdate()
{
    hgcmd "pull -u"
}
alias hgpull='hgpullupdate'

hgmergedefault()
{
    hgcmd "pull -u" "merge default"
}
alias hgmd='hgmergedefault'

