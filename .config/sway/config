#gnome theme settings
set $gnome-schema org.gnome.desktop.interface
exec_always {
    gsettings set $gnome-schema gtk-theme 'Matcha-sea'
    gsettings set $gnome-schema icon-theme 'Papirus'
    gsettings set $gnome-schema cursor-theme 'Breeze'
    gsettings set $gnome-schema font-name 'PT Sans 12'
    gsettings set $gnome-schema monospace-font-name 'PT Mono 12'
}

exec_always import-gsettings \
    gtk-theme:gtk-theme-name \
    icon-theme:gtk-icon-theme-name \
    cursor-theme:gtk-cursor-theme-name


