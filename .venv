export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python2.7
export VIRTUALENVWRAPPER_VIRTUALENV=virtualenv2
export PIP_REQUIRE_VIRTUALENV=true
export PIP_RESPECT_VIRTUALENV=true
export WORKON_HOME=~/_venvs
source /usr/bin/virtualenvwrapper.sh
export PIP_VIRTUALENV_BASE=$WORKON_HOME

export FULL_CLONE_HOME=/home/egorov/_hg
export EDITOR=vim

# python3 pyvenv setting
export PY3_HOME=~/_py3
[ ! -d ${PY3_HOME} ] && mkdir ${PY3_HOME}

mkpy3() {
    cd ${PY3_HOME} && pyvenv $1 && cd $1 && mkdir _app && py3 $1
}
py3() {
    cd ${PY3_HOME} && cd $1 && . bin/activate && [ -d _app ] && cd _app
}
